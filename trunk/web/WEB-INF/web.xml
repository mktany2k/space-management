<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5"
         xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_5.xsd">

	<listener>
	    <listener-class>com.scwcd.enterprise.servlet.listener.DefaultListener</listener-class>
	    <!-- Listener to construct camel.cfg.xml config file 
	    <listener-class>com.scwcd.enterprise.servlet.listener.svg.SvgFileListener</listener-class>
	    -->
	</listener>

	<!--
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/camel.cfg.xml</param-value>
	</context-param>

    <servlet>
        <servlet-name>ApplicationServlet</servlet-name>
        <servlet-class>com.scwcd.enterprise.servlet.ApplicationServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
    </servlet>
    -->

    <servlet>
        <servlet-name>DefaultServlet</servlet-name>
        <servlet-class>com.scwcd.enterprise.servlet.DefaultServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>DefaultServlet</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/logout</url-pattern>
        <url-pattern>/secure/*</url-pattern>
    </servlet-mapping>

	<!-- SecurityFilter: /secure/* -->
	<filter>
		<filter-name>SecurityFilter</filter-name>
		<filter-class>com.scwcd.enterprise.servlet.filter.SecurityFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>SecurityFilter</filter-name>
		<url-pattern>/secure/*</url-pattern>
	</filter-mapping>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/error.jsp</location>
    </error-page>
</web-app>